
<div class = "w-[clamp(300px,90%,400px)] mx-auto  shadow-[0_0_10px_5px_rgba(0,0,0,0.15)] p-10 rounded-lg">

<h2 class = 'text-3xl font-bold mb-4 text-center font-semibold'>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email , class: 'font-semibold ' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email"  ,class: " w-full my-2 font-normal text-sm" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password  , class: 'font-semibold '%> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password"   ,class: " w-full my-2 font-normal text-sm" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation  , class: 'font-semibold ' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password"   ,class: " w-full my-2 font-normal text-sm"%>
  </div>

  <div class="field">
    <%= f.label :current_password  , class: 'font-semibold '%> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password"  ,class: " w-full my-2 font-normal text-sm"%>
  </div>

  <div class="actions">
    <%= f.submit "Update" ,class: 'bg-gray-800 text-gray-50  w-full py-2 rounded-md font-semibold text-lg mt-2' %>
  </div>
<% end %>


<div class = 'font-semibold text-gray-700 text-lg py-2'>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete ,class: 'bg-gray-800 text-gray-50  w-full py-2 rounded-md font-semibold text-lg my-2'%></div>

<%= link_to "Back", :back,class: 'bg-gray-800 text-gray-50  w-full py-2 rounded-md font-semibold text-lg mt-4 px-6 ' %>
</div>
