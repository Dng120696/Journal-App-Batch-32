<section class = 'shadow-[0_0_1rem_5px_rgba(0,0,0,0.15)] rounded-sm w-[clamp(300px,90%,500px)] px-6 py-8 '>
  <h1 class = 'text-3xl font-bold mb-2'>Task Details </h1>
    <p  class = 'mb-2'>
      <strong> Name: </strong>
      <span class = 'text-gray-500 text-md'>
      <%= @task.title %>
      </span>
      </p>
    <p  class = 'mb-2'>
      <strong> Description: </strong>
      <span class = 'text-gray-500 text-md'>
      <%= @task.description %>
      </span>
      </p>
    <p  class = 'mb-2'>
      <strong> Due Date: </strong>
      <span class = 'text-gray-500 text-md'>
      <%= @task.due_date %>
      </span>
      </p>
    <p  class = 'mb-2'>
      <strong> Is Completed: </strong>
      <span class = 'text-gray-500 text-md'>
      <%= @task.is_completed ? 'Yes' : 'No' %>
      </span>
      </p>
    <p  class = 'mb-2'>
      <strong>Created At: </strong>
      <span class = 'text-gray-500 text-md'>
      <%= @task.created_at.strftime("%B %d, %Y") %>
      </span>
      </p>
    <p  class = 'mb-2'>
      <strong>Updated At: </strong>
      <span class = 'text-gray-500 text-md'>
      <%= @task.updated_at.strftime("%B %d, %Y ") %>
      </span>
    </p>
  <div class = 'flex items-center justify-between'>
    <div>
      <%= link_to 'Back to Categories', categories_path, class: 'bg-gray-200 rounded-sm font-semibold py-2 px-6 border-[1px] cursor-pointer text-sm text-gray-700' %>
      </div>
    <div class = 'flex items-center justify-between gap-4'>
      <%= render 'shared/edit-page',url: edit_category_task_path, obj:[ @task.category]%>
      <%= render 'shared/delete-page',url: category_task_path, obj: [@task.category,@task]%>

    </div>
  </div>

</section>
