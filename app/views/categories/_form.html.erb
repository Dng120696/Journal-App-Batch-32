

<section class = 'shadow-[0_0_1rem_5px_rgba(0,0,0,0.15)] w-[clamp(300px,90%,400px)] px-6 py-8 '>
<h1 class = 'text-3xl text-center font-bold mb-4 '>Category Form</h1>
<%= render 'shared/error-messages',obj: @category%>

<%= form_with model: @category,data:{turbo:false} do |f|%>
<p class = 'flex flex-col gap-2'>
  <%= f.label :name,class: 'text-md font-semibold mb-2'%>
  </span>
  <%= f.text_field :name, placeholder: 'Category Name',class: 'w-full border-[1px] border-gray-300 mb-4 text-md'%>
  </span>
</p>

<p class = 'flex items-center justify-between'>
  <span>
  <%= f.submit @category.new_record? ? 'Create' : 'Update', class: 'bg-gray-200 rounded-sm font-semibold py-2 px-8 border-[1px] cursor-pointer text-sm text-gray-700' %>
  </span>
  <span>
    <%= link_to 'Cancel',categories_path, class: 'bg-gray-200 rounded-sm font-semibold py-2 px-8 border-[1px] cursor-pointer text-sm text-gray-700'%>
  </span>
</p>

<%end%>
</section>
